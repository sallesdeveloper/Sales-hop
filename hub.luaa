-- Botões
local function criarBotao(nome, cor, pos, callback)
	local botao = Instance.new("TextButton", gui)
	botao.Size = UDim2.new(0, 120, 0, 40)
	botao.Position = pos
	botao.Text = nome
	botao.BackgroundColor3 = cor
	botao.TextColor3 = Color3.new(1, 1, 1)
	botao.TextScaled = true
	botao.MouseButton1Click:Connect(callback)
	return botao
end

