-- Server Hop Simples (sem HttpService)
local visitados = {}

local brainrotsSecretos = {
	"GOD", "Os Tralaleritos", "DEMON", "Raybom", "Golden Tralalero", "???"
}

function contemBrainrotSecreto()
	for _, npc in pairs(workspace:GetDescendants()) do
		if npc:IsA("Model") then
			for _, nome in pairs(brainrotsSecretos) do
				if string.lower(npc.Name):find(string.lower(nome)) then
					return true
				end
			end
		end
	end
	return false
end

function buscarServidor()
	spawn(function()
		while rodando do
			if contemBrainrotSecreto() then
				status.Text = "Brainrot secreto encontrado! Parando busca."
				btnParar.Visible = false
				rodando = false
				break
			end

			-- Procurar servidores simples
			local servers = game:GetService("TeleportService"):GetPlayerPlaceInstancesAsync(PlaceId, 10)
			for _, server in pairs(servers:GetChildren()) do
				local serverId = server.PrivateServerId
				if not table.find(visitados, serverId) then
					table.insert(visitados, serverId)
					status.Text = "Verificando novo servidor..."
					TeleportService:TeleportToPlaceInstance(PlaceId, server.PrivateServerId, LocalPlayer)
					break
				end
			end
			wait(2)
		end
	end)
end
